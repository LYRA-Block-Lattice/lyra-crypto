{
  "compilerOptions": {
    "module": "es6",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react", // 如果使用 React
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
